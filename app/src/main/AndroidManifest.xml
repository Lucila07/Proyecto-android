<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lucila.myapplication"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">

    <!-- Permiso usado para obtener la ubicación del usuario -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Permiso para conectarse a internet y hacer los request a la base de datos -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Si el celular no tiene opengl v2.0 no se puede usar esta aplicación (por el Maps) -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyD9cQDDEPFhykyVWZidbzA2MDQVKMCW6HY" />

        <activity android:name="com.example.lucila.turnosPP.actividades.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.lucila.turnosPP.actividades.RegistrarseActivity"
            android:label="@string/title_activity_registrarse"
            android:parentActivityName="com.example.lucila.turnosPP.actividades.LoginActivity">

            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.lucila.turnosPP.actividades.LoginActivity" />
        </activity>
        <activity
            android:name="com.example.lucila.turnosPP.actividades.MenuPrincipalActivity"
            android:label="@string/title_activity_menuppal" />
        <activity
            android:name="com.example.lucila.turnosPP.actividades.CrearOfertasActivity"
            android:label="@string/title.crear.oferta"
            android:parentActivityName="com.example.lucila.turnosPP.actividades.MenuPrincipalActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.lucila.turnosPP.actividades.MenuPrincipalActivity" />
        </activity>
        <activity
            android:name="com.example.lucila.turnosPP.actividades.EstablecerUbicacionActivity"
            android:label="@string/title.establecer.ubicacion"
            android:parentActivityName="com.example.lucila.turnosPP.actividades.MenuPrincipalActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.lucila.turnosPP.actividades.MenuPrincipalActivity" />
        </activity>
        <activity
            android:name="com.example.lucila.turnosPP.actividades.OfertasActivity"
            android:label="@string/title.lista.ofertas"
            android:parentActivityName="com.example.lucila.turnosPP.actividades.MenuPrincipalActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.lucila.turnosPP.actividades.MenuPrincipalActivity" />
        </activity>

        <service
            android:name="com.example.lucila.turnosPP.servicios.ObtenerDireccionService"
            android:exported="false" />

        <activity android:name="com.example.lucila.turnosPP.actividades.DeportesCheckerActivity" />
        <activity android:name="com.example.lucila.turnosPP.actividades.PerfilActivity" />
    </application>

</manifest>