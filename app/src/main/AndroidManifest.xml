<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lucila.myapplication">

    <!-- Permiso usado para obtener la ubicación del usuario -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Si el celular no tiene opengl v2.0 no se puede usar esta aplicación -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"
            />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyD9cQDDEPFhykyVWZidbzA2MDQVKMCW6HY"
            />

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistrarseActivity"
            android:label="@string/title_activity_registrarse"
            android:parentActivityName=".LoginActivity">

            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity
            android:name=".MenuPrincipalActivity"
            android:label="@string/title_activity_menuppal"
            android:parentActivityName=".LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity
            android:name=".CrearOfertasActivity"
            android:label="@string/title.crear.oferta"
            android:parentActivityName=".MenuPrincipalActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MenuPrincipalActivity" />
        </activity>
        <activity android:name=".EstablecerUbicacionActivity" />

        <service
            android:name=".servicios.ObtenerDireccionService"
            android:exported="false"
            />
    </application>

</manifest>