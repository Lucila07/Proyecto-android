<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/panelContenedor"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top|center">

        <TextView
            android:id="@+id/textview_n_ofertas_restantes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textview_restantes"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            />

        <TextView
            android:id="@+id/textView_info_menu_ppal"
            style="@style/textoError"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:paddingTop="0dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textview_recordatorio"
            android:visibility="invisible"
            />

        <Button
            style="@style/botonMenuPrincipal"
            android:id="@+id/boton_crear_oferta"
            android:text="@string/boton_crear_oferta"
            />

        <Button
            style="@style/botonMenuPrincipal"
            android:id="@+id/boton_ver_creadas"
            android:text="@string/boton_ver_ofertas"
            />

        <Button
            style="@style/botonMenuPrincipal"
            android:id="@+id/boton_comprar_ofertas"
            android:text="@string/boton_comprar_ofertas"
            />

        <Button
            style="@style/botonMenuPrincipal"
            android:id="@+id/boton_establecer_ubicacion"
            android:text="@string/boton_establecer_ubicacion"
            />

        <Button
            style="@style/botonMenuPrincipal"
            android:id="@+id/boton_denunciar_usuario"
            android:text="@string/boton_denunciar_usuario"
            />
    </LinearLayout>

</LinearLayout>