<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="center|right">

        <Button
            style="@style/botonMenuPrincipal"
            android:id="@+id/boton_crear_oferta"
            android:text="@string/boton_crear_oferta"
            />

        <Button
            style="@style/botonMenuPrincipal"
            android:id="@+id/boton_ver_creadas"
            android:text="@string/boton_ver_ofertas"
            />

        <Button
            style="@style/botonMenuPrincipal"
            android:id="@+id/boton_comprar_ofertas"
            android:text="@string/boton_comprar_ofertas"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="center|left">

        <Button
            style="@style/botonMenuPrincipal"
            android:id="@+id/boton_establecer_ubicacion"
            android:text="@string/boton_establecer_ubicacion"
            />

        <Button
            style="@style/botonMenuPrincipal"
            android:id="@+id/boton_denunciar_usuario"
            android:text="@string/boton_denunciar_usuario"
            />

        <Button
            style="@style/botonMenuPrincipal"
            android:visibility="invisible"
            />
    </LinearLayout>

</LinearLayout>