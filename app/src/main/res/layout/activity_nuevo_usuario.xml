<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lucila.myapplication.NuevoUsuario"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:background="@color/colorPrimary"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="60dp"
        android:typeface="serif"
        android:paddingBottom="50dp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese su telefono:"
        android:textSize="30dp"
        android:textColor="@color/abc_input_method_navigation_guard" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="telefono"
        android:id="@+id/ed_telefono"
        android:inputType="number"
        android:textColor="#121212"
        android:textSize="20dp"
        android:textColorHint="#f8112c" />
</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boton_crear_usuario"
        android:text="Ingresar"
        android:backgroundTint="@color/colorAccent"
        android:textSize="25dp"
        android:textColor="#FFFFFF"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esta informaacion sera enviada a los establecimientos cuando hagas reservas "
        android:layout_gravity="bottom"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Omitir"
        android:id="@+id/bt_omitir"
        android:layout_gravity="center_horizontal"
        android:background="#00000000"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="20dp"
        />

</LinearLayout>
