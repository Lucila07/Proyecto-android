<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"

    android:background="@color/layoutCards"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview_lista"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp"
        card_view:contentPadding="5dp"
        card_view:cardUseCompatPadding="false"
        android:background="@color/cardview_light_background"

        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    android:paddingBottom="5dp"
    android:layout_margin="5dp"
    android:weightSum="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:paddingRight="40dp">
                <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingRight="16dp"
                            android:paddingLeft="16dp"
                            android:paddingTop="24dp"
                    >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Juga al "
                            android:textSize="24sp"
                            android:textColor="@color/abc_input_method_navigation_guard"
                            />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/deporte"
                                android:textSize="24sp"
                                android:paddingBottom="10dp"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/abc_input_method_navigation_guard" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" en "
                                android:textSize="24sp"
                                android:textColor="@color/abc_input_method_navigation_guard"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/nombre_establecimiento"
                                android:textSize="24sp"
                                android:paddingBottom="10dp"
                                android:textColor="@color/abc_input_method_navigation_guard"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="! "
                                android:textSize="24sp"
                                android:paddingBottom="10dp"
                                android:textColor="@color/abc_input_method_navigation_guard"
                                />
                </LinearLayout>
                           <LinearLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal"
                               android:paddingRight="16dp"
                               android:paddingLeft="16dp"
                               android:paddingBottom="16dp"
                               >
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/tv_ahorro_oferta"
                                   android:textColor="@color/design_textinput_error_color_light"
                                   android:textSize="24sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="% de ahorro!"
                                    android:textSize="24sp"
                                    android:paddingBottom="10dp"
                                    android:textColor="@color/abc_input_method_navigation_guard"
                                    />


                </LinearLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:textColor="@color/abc_input_method_navigation_guard"
                                android:text="Fecha"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/fecha"
                                        android:textSize="20dp"
                                        android:paddingBottom="10dp"
                                    />


                            <TextView
                                android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20dp"
                                android:textColor="@color/abc_input_method_navigation_guard"
                                android:text="Hora"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/hora"
                                        android:textSize="20dp"
                                        android:paddingBottom="10dp"
                                        />



                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                        android:textColor="@color/abc_input_method_navigation_guard"
                        android:text="Ubicacion"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ubicacion"
                            android:textSize="20dp"

                            />




                </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="218dp"
                        android:orientation="vertical"
                        android:paddingLeft="0dp"
                        android:paddingRight="30dp"
                        android:paddingTop="50dp">


                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:id="@+id/imagen_oferta"
                            android:orientation="vertical"

                           android:layout_marginTop="30dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="30dp"
                            />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/oferta_id"
                            android:layout_weight="1"
                            android:visibility="gone"
                            />


                </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>